{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@modules/*": ["./src/core/modules/*"],
            "@components/*": ["./src/core/components/*"],
            "@lib/*": ["./src/lib/*"],
            "@utils": ["./src/core/utils.ts"],
            "@/*": ["./*"]
        },
        "lib": ["ES2022", "DOM"],
        "target": "es2015",
        "module": "es2022",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
    },
    "include": ["src", "src/lib/types.d.ts"]
}
